{
  "type": "apoli:multiple",
  "origin_handler": {
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:execute_command",
          "command": "scale set pehkui:height 1.20 @s"
        },
        {
          "type": "apoli:execute_command",
          "command": "scale set pehkui:width 1.20 @s"
        },
        {
          "type": "apoli:execute_command",
          "command": "scale persist set true @s"
        },
        {
          "type": "apoli:execute_command",
          "command": "tellraw @s {\"translate\":\"origin.touhouorigins.kurayami_ex.announcement_active\",\"color\":\"dark_red\"}"
        },
        {
          "type": "apoli:explode",
          "power": 3,
          "destruction_type": "none",
          "damage_self": false,
          "create_fire": false
        },
        {
          "type": "apoli:trigger_cooldown",
          "power": "*:*_seal_expire_timer"
        }
      ]
    },
    "entity_action_respawned": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:apply_effect",
          "effects": [
            {
              "effect": "minecraft:mining_fatigue",
              "duration": 2400
            },
            {

              "effect": "minecraft:weakness",
              "duration": 2400
            }
          ]
        },
        {
          "type": "apoli:execute_command",
          "command": "tellraw @s {\"translate\":\"origin.touhouorigins.kurayami_ex.announcement_inactive\",\"color\":\"aqua\"}"
        },
        {
          "type": "apoli:execute_command",
          "command": "origin set @s origins:origin touhouorigins:kurayami"
        }
      ]
    },
    "entity_action_lost": {
      "type": "apoli:execute_command",
      "command": "scale reset @s"
    }
  },
  "seal_expire_timer": {
    "type": "apoli:cooldown",
    "cooldown": 12000,
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
      "bar_index": 1,
      "inverted": true
    }
  },
  "seal_expire_handler": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:apply_effect",
          "effects": [
            {
              "effect": "minecraft:mining_fatigue",
              "duration": 2400
            },
            {

              "effect": "minecraft:weakness",
              "duration": 2400
            }
          ]
        },
        {
          "type": "apoli:execute_command",
          "command": "tellraw @s {\"translate\":\"origin.touhouorigins.kurayami_ex.announcement_inactive\",\"color\":\"aqua\"}"
        },
        {
          "type": "apoli:play_sound",
          "sound": "minecraft:entity.player.hurt"
        },
        {
          "type": "apoli:execute_command",
          "command": "origin set @s origins:origin touhouorigins:kurayami"
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_seal_expire_timer",
      "comparison": "==",
      "compare_to": 0
    }
  },
  "fall_immunity": {
    "type": "apoli:invulnerability",
    "damage_condition": {
      "type": "apoli:name",
      "name": "fall"
    }
  },
  "explode_death": {
    "type": "apoli:action_when_damage_taken",
    "condition": {
      "type": "apoli:health",
      "comparison": "<=",
      "compare_to": 0
    },
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:explode",
          "power": 3,
          "destruction_type": "none",
          "damage_self": false,
          "create_fire": false
        }
      ]
    }
  },
  "valid_eat_target": {
    "type": "apoli:entity_glow",
    "use_teams": false,
    "red": 0.9,
    "green": 0.38,
    "blue": 0,
    "entity_condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:and",
          "conditions": [
            {
              "type": "apoli:entity_type",
              "entity_type": "minecraft:player"
            },
            {
              "type": "apoli:or",
              "conditions": [
                {
                  "type": "origins:origin",
                  "origin": "touhouorigins:ghost"
                },
                {
                  "type": "origins:origin",
                  "origin": "touhouorigins:vengeful_spirit"
                },
                {
                  "type": "origins:origin",
                  "origin": "touhouorigins:tsukumogami"
                }
              ],
              "inverted": true
            }
          ]
        }
      ]
    }
  },
  "extra_time_limit": {
    "type": "apoli:resource",
    "min": 0,
    "max": 50,
    "max_action": {
      "type": "apoli:execute_command",
      "command": "tellraw @s {\"translate\": \"origin.touhouorigins.kurayami_ex.announcement_time_limit\", \"color\": \"red\"}"
    }
  },
  "give_extra_time": {
    "type": "apoli:self_action_on_kill",
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:change_resource",
          "resource": "*:*_seal_expire_timer",
          "change": 1200
        },
        {
          "type": "apoli:change_resource",
          "resource": "*:*_extra_time_limit",
          "change": 1
        }
      ]
    },
    "condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:resource",
          "resource": "*:*_seal_expire_timer",
          "comparison": "<",
          "compare_to": 10800
        },
        {
          "type": "apoli:resource",
          "resource": "*:*_extra_time_limit",
          "comparison": "<",
          "compare_to": 50
        }
      ]
    },
    "target_condition": {
      "type": "apoli:and",
      "conditions": [
        {
          "type": "apoli:entity_type",
          "entity_type": "minecraft:player"
        },
        {
          "type": "apoli:or",
          "conditions": [
            {
              "type": "origins:origin",
              "origin": "touhouorigins:ghost"
            },
            {
              "type": "origins:origin",
              "origin": "touhouorigins:vengeful_spirit"
            },
            {
              "type": "origins:origin",
              "origin": "touhouorigins:tsukumogami"
            }
          ],
          "inverted": true
        }
      ]
    }
  }
}